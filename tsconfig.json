{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es2017",
        "outDir": "out",
        "lib": [
            "es2017"
        ],
        // "rootDir": ".",
        // "declaration": true,
        // "removeComments": false,
        "preserveConstEnums": true,
        "allowUnreachableCode": true,
        "sourceMap": true,
        "allowJs": false,
        "strict": true,
        "strictNullChecks": false,
        "experimentalDecorators": true
    },
    "include": [
        "src/**/*",
        "test/**/*"
    ],
    "exclude": [
        "node_modules",
        ".vscode-test"
    ]
}